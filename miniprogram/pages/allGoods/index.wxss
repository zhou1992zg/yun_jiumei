@import '../../style/YouYuan.wxss'; 

page {
  overflow: hidden;
}

view{
  font-family: "YouYuan";
  box-sizing: content-box !important;
}

.container {
  color: #333;
}

.main {
  width: 100%;
  position: absolute;
  left: 0;
  top: 0;
  bottom: 0;
  overflow: hidden;
}

.shopping-basket {
  width: 100%;
  height: 100rpx;
  position: absolute;
  bottom: 0;
  left: 0;
}

.kaidan-height {
  padding: 72rpx 0;
}

.has-no-goods {
  text-align: center;
  margin-top: 300rpx;
  color: #999;
}

.has-no-goods text {
  display: block;
  margin-bottom: 60rpx;
}

.has-no-goods .has-no-goods-btn {
  width: 670rpx;
  border: none;
  position: absolute;
  left: 40rpx;
  bottom: 20rpx;
}

.ball {
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
  background: #FF8200;
  position: absolute;
  /* left: 40rpx; */
}

page {
  position: relative;
  box-sizing: border-box;
  min-height: 100vh;
  background-color: #f2f2f2;
  font-size: 32rpx;
  color: #333;
  overflow: hidden;
}