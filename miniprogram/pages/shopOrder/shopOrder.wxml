<wxs module="fn">
  module.exports = {
    getOrderText: function(orderDetail) {
    var serviceText = '';
      for (var i = 0; i < orderDetail.goods.length; i++) {
            serviceText = serviceText + (orderDetail.goods[i].values) + ',';
        }
      serviceText=serviceText.substring(0,serviceText.length-1)
     return serviceText;
    },
  }
</wxs>
  <view class='wrap'>
    <view class='tab'>
      <scroll-view scroll-x style="height: 44px;" scroll-with-animation="500" scroll-left="{{scrollWidth}}">
        <block wx:for="{{tabData}}" wx:key="index">
          <view class="tabItem {{tabIndex==index?'active':''}}" id="{{'scrollList'+index}}" data-index='{{index}}' data-btnindex="{{item.btnIndex}}" bindtap='tabsClick' data-listname="{{item.listName}}">
            {{item.title}}
            <view class="num-num" wx:if="{{item.orderNum}}">{{item.orderNum}}</view>
          </view>
        </block>
      </scroll-view>
    </view>
    <block  wx:if="{{!orderList||orderList.length==0}}" wx:for="{{orderList}}" wx:key="index">
    <view class="order-box" style="min-height:{{swiperHeight}}px">
              <block wx:for='{{orderLists}}' wx:key='{{item.id}}' wx:for-index="num">
                <view class="order-list-box" catchtap='detail' data-orderid="{{item.id}}">
                  <view class="order-content">
                    <view class="order-name"> 
                      <view class="name">{{item.title}}</view>
                      <view class="type-text">{{item.statusname}}</view>
                    </view>
                    <view class="server-contenr-box">
                      <view class="server-list">
                        <view class="text-left">服务内容</view>
                        <view class="text-right">{{item.title}}（{{fn.getOrderText(item)}}）</view>
                      </view>
                      <view class="server-list">
                        <view class="text-left">服务地址</view>
                        <view class="text-right ellipsis1">上海市浦东区某某小区3栋23号</view>
                      </view>
                      <view class="server-list">
                        <view class="text-left">下单时间</view>
                        <view class="text-right ellipsis1">{{item.createtime}}</view>
                      </view>
                    </view>
                    <view class="order-name">
                      <view class="name">支付金额</view>
                      <view class="type-text">
                        <text class="money-icon">¥</text>
                        <text>{{item.price}}元</text>
                      </view>
                    </view>
                    <view class="goods-btn-box"></view>
                  </view>
                </view>
              </block>
            </view>
    </block>
    <view class='empty_big_box'>
  <view class='empty_box'>
    <i class="iconfont icon-kong2 i"></i>
    <view class='empty_text'>暂无订单</view>
  </view>
</view>
  </view>