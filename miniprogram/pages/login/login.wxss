@import '../../style/YouYuan.wxss'; 

view {
  font-family: "YouYuan";
}

.login_box {
  position: relative;
  width: 100vw;
  height: 100vh;
  overflow: hidden;
}

.no_login {
    height: 40rpx;
    font-size: 28rpx;
    font-family: PingFangSC-Regular, PingFang SC;
    font-weight: 400;
    color: rgba(204, 204, 204, 1);
    line-height: 40rpx;
    letter-spacing: 2rpx;
    text-align: center;
    margin-top: 128rpx;
    text-decoration: underline;
  }
  .w_b_text {
    height: 50rpx;
    font-size: 36rpx;
    font-family: PingFangSC-Regular, PingFang SC;
    font-weight: 400;
    color: rgba(51, 51, 51, 1);
    line-height: 50rpx;
    text-align: center;
    margin-top: 244rpx;
  }
  .w_b_en {
    height: 82rpx;
    font-size: 58rpx;
    font-family: PingFangSC-Semibold, PingFang SC;
    font-weight: 700;
    color: rgba(0, 0, 0, 1);
    line-height: 82rpx;
    text-align: center;
    margin-top: 20rpx;
  }
  .w_b_p {
    height: 40rpx;
    font-size: 28rpx;
    font-family: PingFangSC-Regular, PingFang SC;
    font-weight: 400;
    color: rgba(204, 204, 204, 1);
    line-height: 40rpx;
    letter-spacing: 2rpx;
    text-align: center;
    margin-top: 128rpx;
  }
  button {
    width: 396rpx;
    height: 124rpx;
    line-height: 124rpx;
    text-align: center;
    margin: 66rpx auto 0 auto;
    background: linear-gradient(
      90deg,
      rgba(197, 31, 31, 1) 0%,
      rgba(71, 31, 31, 1) 100%
    );
    color: #fff!important;
    font-size: 34rpx;
    font-weight: 600;
    border: 0px solid #fff!important;
    border-radius: 62rpx;
  }
  .w_b_bottom {
    position: fixed;
    bottom: 54rpx;
    left: 0;
    width: 100vw;
    height: 48rpx;
    font-size: 28rpx;
    font-family: PingFangSC-Regular, PingFang SC;
    font-weight: 400;
    color: rgba(204, 204, 204, 1);
    line-height: 48rpx;
    letter-spacing: 2rpx;
    text-align: center;
  }