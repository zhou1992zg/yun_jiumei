/* 轮播 */
@import '../../style/YouYuan.wxss';

view {
  font-family: "YouYuan";
}

.swiper_box {
  height: 700rpx;
}

.swiper {
  height: 700rpx;
  background-color: #fff;
  overflow: hidden;

}

.slide-image {
  width: 750rpx;
  height: 700rpx;
}

.goods_name {
  width: 100%;
  font-size: 36rpx;
  font-weight: bold;
  line-height: 60rpx;
  padding: 10rpx 20rpx;
}

.money {
  margin: 0 20rpx;
  padding: 20rpx 0;
  font-weight: bold;
  font-size: 24rpx;
  color: #9c2732;
  border-bottom: 2rpx solid #eee;
}

.money span {
  font-size: 34rpx;
}

.one {
  margin: 0 20rpx;
  padding: 20rpx 0;
  font-size: 26rpx;
  color: #ccc;
  border-bottom: 2rpx solid #eee;
  overflow: hidden;
}

.one .left {
  margin-left: 20rpx;
  float: left;
}

.one .right {
  margin-right: 20rpx;
  float: right;
}

.goods_D {
  display: block;
  width: 94%;
  margin: 0 auto;
  padding-bottom: 120rpx;
}

/* 购买按钮 */

.buyBtn {
  width: 750rpx;
  /* height: 98rpx; */
  background: rgba(255, 255, 255, 1);
  box-shadow: 0px -8rpx 52rpx 0px rgba(0, 0, 0, 0.11);
  position: fixed;
  left: 0;
  bottom: 0;
  display: flex;
  justify-content: space-between;
  box-sizing: border-box;
}

.buyBtn .left {
  box-sizing: border-box;
  padding-top: 24rpx;
}

.buyBtn .left text:nth-child(1) {
  height: 36px;
  font-size: 26rpx;
  color: rgba(136, 136, 136, 1);
  margin-right: 14rpx;
}

.buyBtn .left text:nth-child(2) {
  height: 36rpx;
  font-size: 26rpx;
  color: #9c2732;
  line-height: 36rpx;
}

.buyBtn .left text:nth-child(3) {
  height: 56rpx;
  font-size: 34rpx;
  font-weight: 500;
  color: #9c2732;
  line-height: 56rpx;
}

.buyBtn .btn {
  display: flex;
  flex-direction: column;
  justify-content: center;
  position: relative;
  flex: 1;
  height: 100rpx;
  font-size: 34prx;
  font-family: "YouYuan";
  color: rgba(255, 255, 255, 1);
  line-height: 100rpx;
  text-align: center;
  border-radius: 0;
  float: left;
}

.buyBtn .btn_one {
  background: #9c2732;
}

.buyBtn .btn_two {
  background: #dd3704;
}

.buyBtn .btn ._icon {
  font-size: 42rpx;
  color: #000;
  height: 50rpx;
  line-height: 72rpx;
}

.animation_moveImg {
  animation: moveImg .5s linear infinite 0s alternate;
}

@keyframes moveImg {
  0% {
    transform: rotate(-10deg);
  }

  100% {
    transform: rotate(10deg);
  }
}

.buyBtn .btn span {
  height: 50rpx;
  font-size: 22rpx;
  color: #000;
  line-height: 50rpx;
}

.buyBtn .btn .card_num {
  position: absolute;
  top: 6rpx;
  right: 30rpx;
  width: 30rpx;
  height: 30rpx;
  font-size: 20rpx;
  color: #9c2732;
  border-radius: 50%;
  border: 2rpx solid #9c2732;
  line-height: 30rpx;
  text-align: center;
  background: #fff;
  z-index: 999;
}

.buyBtn .btn-box {
  width: 750rpx;
  height: 100rpx;
  background: #9c2732;
  font-size: 34prx;
  font-family: "YouYuan";
  color: rgba(255, 255, 255, 1);
  line-height: 100rpx;
  text-align: center;
  border-radius: 0;
}

.buyBtn .no_total {
  background: #ccc;
}

._type {
  width: 100vw;
  margin: 0 20rpx;
  padding: 20rpx 0;
}

._type span {
  color: #777778;
  font-size: 26rpx;
  padding: 8rpx 18rpx;
  background-color: #eee;
  border-radius: 30rpx;
  margin-right: 10rpx;
}

