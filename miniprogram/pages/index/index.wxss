.index_page {
  background: #fff;
}

/* 轮播 */
.swiper_box {
  height: 350rpx;
}
.swiper {
  height: 350rpx;
  background-color: #fff;
  overflow: hidden;
  
}
.slide-image {
  width: 750rpx;
  height: 350rpx;
  background: rgb(117, 36, 35);
}

/* 几大板块 */
.banner_box{
  padding-top: 20rpx;
}
.category_list {
  display: inline-block;
  text-align: center;
  font-size: 0;
  flex: 1;
  width: 25%;
  padding-bottom: 30rpx;
  padding-top: 10rpx;
  position: relative;
}

