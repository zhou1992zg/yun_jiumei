.category_list view {
  position: absolute;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 40rpx;
  text-align: center;
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
  margin-top: -14rpx;
}

/* 活动板块 */
.recommended_box {
  padding-top: 40rpx;
}

.recommended_box .title {
  height: 40rpx;
  width: 750rpx;
  padding: 0 48rpx;
  color: #060506;
  font-size: 36rpx;
  font-weight: bold;
  line-height: 40rpx;
}

.recommended_box .title span {
  font-size: 24rpx;
  color: #868485;
  font-weight: bold;
}

/* 左滑商品盒子 */
.scroll_view {
  box-sizing: border-box;
  padding: 0 0 0 18rpx;
}

.scroll_view .scroll_box {
  white-space: nowrap;
}

.new-product-plate {
  background: #fff;
  position: relative;
  flex-shrink: 0;
  display: inline-block;
  margin: 28rpx 14rpx 0 14rpx;
}

.new-product-plate .goods-img {
  position: relative;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 0 16rpx rgba(0, 0, 0, .4);
}

.new-product-plate .goods-img .img {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
}

.pay_style{
  width: 680rpx;
  height: 110rpx;
  margin-bottom: 20rpx;
  display: flex;
  box-sizing: border-box;
  align-items: center;
  background-color: #fff;
  border-radius:20rpx;
  margin: 0 auto;
}

.pay_style .i_two{
  font-size: 36rpx;
  font-weight: bold;
  color: #000;
  margin-right: 10rpx;
}

.my_map{
  position: relative;
}

.cover-view{
  width: 50rpx;
  height: 50rpx;
  position: absolute;
  bottom: 40rpx;
  right: 20rpx;
  background-color: #fff;
  border-radius: 50%;
}