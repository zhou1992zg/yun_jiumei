.category_list view {
  position: absolute;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 40rpx;
  text-align: center;
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
  margin-top: -14rpx;
}

/* 活动板块 */
.recommended_box{
  padding-top: 40rpx;
}

.recommended_box .title{
  height: 40rpx;
  width: 750rpx;
  padding: 0 48rpx;
  color: #060506;
  font-size: 36rpx;
  font-weight: bold;
  line-height: 40rpx;
}

.recommended_box .title span{
  font-size: 24rpx;
  color: #868485;
  font-weight: bold;
}

/* 左滑商品盒子 */
.scroll_view {
  box-sizing: border-box;
  padding: 0 0 0 18rpx;
}

.scroll_view .scroll_box {
  white-space: nowrap;
}

.new-product-plate {
  background: #fff;
  position: relative;
  flex-shrink: 0;
  display: inline-block;
  margin: 28rpx 14rpx 0 14rpx;
}

.new-product-plate .goods-img {
  position: relative;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow:0 0 16rpx rgba(0, 0, 0, .4);
}

.new-product-plate .goods-img .img {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
}

.all_goods{
  margin-top: 20rpx;
}

.goods_class_list {
  overflow: hidden;
  padding: 0 22rpx;
}

.goods_img {
  width: 270rpx;
  height: 270rpx;
  margin: 12rpx 0;
  border-radius: 20rpx;
  float: left;
}

.right {
  float: right;
  width: 418rpx;
  font-size: 28rpx;
  padding-top: 12rpx;
  padding-bottom: 20rpx;
  border-bottom: 2rpx solid #eee;
}

.title {
  padding-top: 16rpx;
}

.feature {
  padding-top: 20rpx;
}

.feature span {
  color: #777778;
  font-size: 28rpx;
  padding: 0 18rpx;
  background-color: #fefefe;
  border-radius: 30rpx;
  margin-right: 10rpx;
}

.money {
  padding-top: 20rpx;
  font-size: 22rpx;
  color: #ef2a26;
  font-weight: 600;
}

.money span {
  font-size: 32rpx;
}

.type {
  padding-top: 14rpx;
  font-size: 20rpx;
  color: #aaa;
}

.hover-style{
  background-color: rgba(102, 99, 99, 0.1);
  border-radius: 20rpx;
}