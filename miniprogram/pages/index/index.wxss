/**index.wxss**/
@import '../../style/YouYuan.wxss';

view {
  font-family: "YouYuan";
}

.index_page{
  padding-bottom: 30rpx;
}

/* 轮播 */
.swiper_box {
  height: 350rpx;
}

.swiper {
  height: 360rpx;
  overflow: hidden;
  background: -webkit-linear-gradient(top, #9c2732 0%, #fff 100%);
}

.swiper-item {
  display: flex;
  align-items: center;
  justify-content: center;
}

.slide-image {
  width: 690rpx;
  height: 310rpx;
  margin: 0 auto;
  margin-top: 16rpx;
  border-radius: 20rpx;
  overflow: hidden;
  box-shadow: 0px 6rpx 10rpx rgba(0, 0, 0, 0.3);
}

/* 几大板块 */
.banner_box {
  padding-top: 10rpx;
}

.category_list {
  display: inline-block;
  text-align: center;
  font-size: 0;
  flex: 1;
  width: 25%;
  padding-bottom: 30rpx;
  padding-top: 10rpx;
  position: relative;
}

