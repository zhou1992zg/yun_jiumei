/* pages/my/my.wxss */
@import '../../style/YouYuan.wxss'; 

view {
  font-family: "YouYuan";
}

page {
  font-size: 26rpx;
  color: #000;
}

.user-crad-box {
  width: 690rpx;
  position: relative;
}

.user-card {
  height: 265rpx;
  width: 100%;
  background: #fff;
  border-radius: 40rpx;
  box-sizing: border-box;
  position: relative;
  z-index: 10;
}

.user-card .conetnt {
  display: flex;
  align-items: center;
  padding: 55rpx 36rpx;
}

.login-box {
  box-sizing: border-box;
  padding-top: 20%;
  text-align: center;
}

.login-box .login-tip {
  /* width:216px; */
  height: 50rpx;
  font-size: 36rpx;
  font-family: "YouYuan";
  /* font-weight:400; */
  color: rgba(0, 0, 0, 1);
  line-height: 50rpx;
  text-align: center;
}

.name {
  font-size: 36rpx;
  color: #000;
  margin-bottom: 24rpx;
}

.attention {
  font-size: 28rpx;
  color: #353535;
}

.attention text {
  color: #888;
}

.user-img {
  width: 160rpx;
  height: 160rpx;
  margin-right: 32rpx;
  border-radius: 160rpx;
}

.tab-icons {
  width: 690rpx;
  height: 156rpx;
  background: rgba(255, 255, 255, 1);
  box-shadow: 0 16rpx 48rpx 0 rgba(0, 0, 0, 0.1);
  border-radius: 20rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  text-align: center;
  margin: 108rpx auto 38rpx auto;
}

.tab-icons .icon {
  position: relative;
  width: 33%;
  font-size: 26rpx;
  color: #353535;
}

.icon .num {
  position: absolute;
  top: 0;
  right: 20%;
  display: inline-block;
  height: 28rpx;
  font-size: 20rpx;
  padding: 0 6rpx;
  font-family: "YouYuan";
  font-weight: 400;
  color: rgba(255, 255, 255, 1);
  line-height: 28rpx;
  background: rgba(239, 53, 53, 1);
  border-radius: 50%;
  text-align: center;
}

.tab-icons image {
  width: 60rpx;
  height: 60rpx;
  display: block;
  margin: auto;
  margin-bottom: 12rpx;
}

.vip {
  position: absolute;
  z-index: 9;
  bottom: -114rpx;
  left: 0;
  border-radius: 0 0 40rpx 40rpx;
  height: 166px;
  right: 0;
  overflow: hidden;
  background: -webkit-linear-gradient(right, #353535, #000000);
  background-position: center;
  background-size: 100% 100%;
}


