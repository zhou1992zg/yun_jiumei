/* pages/order/order.wxss */
page{
  min-height: 100vh;
  background-color: #f2f5f4;
}

view {
  box-sizing: content-box !important;
}

.address {
  width: 720rpx;
  height: 176rpx;
  margin-bottom: 20rpx;
  display: flex;
  box-sizing: border-box;
  padding: 0 0 0 30rpx;
  align-items: center;
  background-color: #fff;
  border-radius: 0 0 20rpx 20rpx;
}

.address .address-icon {
 font-size: 48rpx;
 color: #9c2732;
  margin-right: 22rpx;
}

.address-right {
  flex: 1;
}

.address-right .name{
  display: flex;
  align-items: center;
}

.address-right .name text:nth-child(2){
  flex: 1;
  text-align: right;
  margin-right: 30rpx;
}

.pay_style{
  width: 690rpx;
  height: 110rpx;
  margin-bottom: 20rpx;
  display: flex;
  justify-content: space-between;
  box-sizing: border-box;
  padding: 0 30rpx 0 30rpx;
  align-items: center;
  background-color: #fff;
  border-radius:20rpx;
}


.has_shop_list {
  width: 100%;
  min-height: 100%;
  display: flex;
  flex-direction: column;
}

.has_shop_item {
  width: 100%;
  height: 230rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 18rpx;
  background-color: #fff;
  margin-bottom: 26rpx;
}

.btn_ischeck {
  width: 100%;
  display: flex;
  height: 100%;
  align-items: center;
  justify-content: space-around;
}

.img_icon_ischeck {
  width: 38rpx;
  height: 38rpx;
  border: 2rpx solid rgba(151, 151, 151, 1);
  border-radius: 50%;
  margin: 0 30rpx 0 30rpx;
}

.shop_img {
  width: 200rpx;
  height: 200rpx;
  border-radius: 20rpx;
  overflow: hidden;
}

.menu_right_txt {
  flex: 1;
  height: 180rpx;
  line-height: 30rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  margin-right: 30rpx;
  margin-left: 30rpx;
}

.menu_right_name {
  font-size: 28rpx;
  line-height: 30rpx;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: rgba(51, 51, 51, 1);
}

.menu_right_lable {
  width: 50rpx;
  height: 50rpx;
  background: rgba(214, 70, 60, 1);
  border-radius: 25rpx;
  font-size: 20rpx;
  color: rgba(255, 255, 255, 1);
  text-align: center;
  line-height: 50rpx;
}

.menu_right_down {
  display: flex;
  align-items: center;
  line-height: 42rpx;
  justify-content: space-between;
}

.menu_right_nprice {
  font-size: 30rpx;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: rgba(214, 70, 60, 1);
}

.menu_right_oprice {
  font-size: 20rpx;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: rgba(185, 189, 185, 1);
  /* margin-left: 22rpx; */
  text-decoration: line-through;
  padding-top: 14rpx;
}

.menu_right_shopcar {
  width: 38rpx;
  height: 38rpx;
  float: right;
}

.position_hasshop_item {
  width: 690rpx;
  display: flex;
  align-items: center;
  flex-direction: row;
}

.btn_delete_shop {
  top: 100rpx;
  width: 100rpx;
  height: 228rpx;
  background: rgba(235, 84, 77, 1);
  font-size: 24rpx;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: rgba(255, 255, 255, 1);
  display: flex;
  justify-content: center;
  align-items: center;
  line-height: 33rpx;
  overflow: hidden;
  border-radius: 0 20rpx 20rpx 0;
}

.has_shop_num {
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-top: -70rpx;
}

.color_them{
  color: #9c2732;
}

/* 购买按钮 */

.buyBtn {
  width: 750rpx;
  /* height: 98rpx; */
  background: rgba(255, 255, 255, 1);
  box-shadow: 0px -8rpx 52rpx 0px rgba(0, 0, 0, 0.11);
  position: fixed;
  left: 0;
  bottom: 0;
  display: flex;
  justify-content: space-between;
  box-sizing: border-box;
}

.buyBtn .left {
  box-sizing: border-box;
  padding-top: 24rpx;
}

.buyBtn .left text:nth-child(1) {
  height: 36px;
  font-size: 26rpx;
  font-family: PingFangSC-Regular;
  color: rgba(136, 136, 136, 1);
  margin-right: 14rpx;
}

.buyBtn .left text:nth-child(2) {
  height: 36rpx;
  font-size: 26rpx;
  font-family: PingFangSC-Regular;
  color: #c5201f;
  line-height: 36rpx;
}

.buyBtn .left text:nth-child(3) {
  height: 56rpx;
  font-size: 34rpx;
  font-family: PingFangSC-Medium;
  font-weight: 500;
  color: #c5201f;
  line-height: 56rpx;
}

.buyBtn .btn {
  position: relative;
  flex: 1;
  height: 100rpx;
  background: #c5201f;
  font-size: 22prx;
  font-family: PingFangSC-Regular;
  color: rgba(255, 255, 255, 1);
  line-height: 100rpx;
  text-align: center;
  border-radius: 0;
}

.buyBtn .btn text{
  font-size: 38rpx;
}

.buyBtn .btn .card_num{
  position: absolute;
  top: -20rpx;
  right: 60rpx;
  padding: 16rpx;
  color: #fff;
  font-size: 26rpx;
  font-weight: bold;
  background-color: #9c2732;
  border-radius: 50%;
}

.buyBtn .btn-box {
  display: flex;
  width: 750rpx;
  height: 100rpx;
  background: #9c2732;
  font-size: 34prx;
  font-family: PingFangSC-Regular;
  color: rgba(255, 255, 255, 1);
  line-height: 100rpx;
  text-align: center;
  border-radius: 0;
}

.buyBtn .no_total {
  background: #ccc;
}